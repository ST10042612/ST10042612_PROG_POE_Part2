<Window x:Class="CMCS.ErrorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS"
        mc:Ignorable="d"
        Title="ErrorPopup" Height="250" Width="600">
    <Grid>
        <Button x:Name="OKBtn" Content="OK" HorizontalAlignment="Center" Margin="0,152,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="ErrorMsgLbl" Content="An Error has occured, &#xD;&#xA;please make sure you have entered the correct information, &#xD;&#xA;press ok once you wish to return to the previeous page" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="20" Height="97"/>

    </Grid>
</Window>
