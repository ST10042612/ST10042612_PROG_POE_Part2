<Window x:Class="CMCS.ClaimRejectOrAccept"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS"
        mc:Ignorable="d"
        Title="ClaimRejectOrAccept" Height="450" Width="400">
    <Grid Background="#FF48CAE4">

        <Label x:Name="TitleLbl" Content="Claim: (ClaimID)" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="RejectBtn" Content="Reject" HorizontalAlignment="Left" Margin="234,311,0,0" VerticalAlignment="Top" FontSize="18" Background="White"/>
        <Button x:Name="AcceptBtn" Content="Accept" HorizontalAlignment="Left" Margin="102,311,0,0" VerticalAlignment="Top" FontSize="18" Background="White"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=0}" Margin="78,80,78,156">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
